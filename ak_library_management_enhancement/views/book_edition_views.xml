<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- inherit Form View: Detailed view for editing/creating a book edition-->
    <record id='book_edition_view_form_inherit' model='ir.ui.view'>
        <field name="name">book.edition.view.form.inherit</field>
        <field name="model">book.edition</field>
        <field name="inherit_id"
               ref="ak_library_management.book_edition_view_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="help">Year of Edition</attribute>
            </xpath>

            <xpath expr="//field[@name='active']" position="attributes">
                <attribute name="help">This Edition Available</attribute>
            </xpath>

            <xpath expr="//field[@name='quantity']" position="attributes">
                <attribute name="help">Total Books of This Edition</attribute>
            </xpath>

            <xpath expr="//field[@name='book_price']" position="attributes">
                <attribute name="help">Price of Single Book</attribute>
            </xpath>
        </field>
    </record>

    <!-- inherit Action : Update form view-->
    <record id="ak_library_management.menu_access_edition"
            model="ir.actions.act_window">
        <field name="name">Editions</field>
        <field name="res_model">book.edition</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
            (5,0,0),
            (0,0,{
                'view_mode':'list',
                'view_id':ref('ak_library_management.book_edition_view_list')
            }),
            (0,0,{'view_mode':'form','view_id':ref('book_edition_view_form_inherit')})
        ]"/>
    </record>

    <!-- inherit Menuitem : Rename and Add sequence in Book Edition(Sub manu)-->
    <record id="ak_library_management.sub_menu_access_edition"
            model="ir.ui.menu">
        <field name="name">Book Edition</field>
        <field name="sequence">2</field>
    </record>
</odoo>
