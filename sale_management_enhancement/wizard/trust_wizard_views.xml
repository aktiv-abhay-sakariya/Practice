<odoo>
    <record id="view_trust_confirm_wizard_form" model="ir.ui.view">
        <field name="model">trust.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Untrusted Order">
                <p>This order is not marked as 'Trusted'. Are you sure you want to continue?</p>
                <footer>
                    <button name="action_confirm_anyway" string="Continue" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>