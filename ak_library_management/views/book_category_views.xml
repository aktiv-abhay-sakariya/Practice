<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- List View: Displays a table of book categories (category_name)-->
    <record id='book_category_view_list' model='ir.ui.view'>
        <field name="name">book.category.view.list</field>
        <field name="model">book.category</field>
        <field name="arch" type="xml">
            <list>
                <field name='category_name'/>
                <field name='parent_categ_id'/>
            </list>
        </field>
    </record>

    <!-- Form View: Detailed view for editing/creating a category-->
    <record id='book_category_view_form' model='ir.ui.view'>
        <field name="name">book.category.view.form</field>
        <field name="model">book.category</field>
        <field name="arch" type="xml">
            <form string="Idea form">
                <header></header>
                <sheet>
                    <group>
                        <field name='category_name'/>
                        <field name='parent_categ_id'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View: Enables filtering and searching on book
            categorys (category_name, parent_categ_id) -->
    <record id='book_category_view_search' model='ir.ui.view'>
        <field name="name">book.category.view.search</field>
        <field name="model">book.category</field>
        <field name="arch" type="xml">
            <search>
                <field name='category_name'/>
                <field name='parent_categ_id'/>
            </search>
        </field>
    </record>

    <!-- Action: Defines how to open the categorys records -->
    <record model="ir.actions.act_window" id="menu_access_category">
        <field name="name">Category</field>
        <field name="res_model">book.category</field>
        <field name="view_mode">list,form,search</field>
        <field name="help">Add book category</field>
    </record>

    <menuitem id="sub_menu_access_category" name="Category"
              parent="menu_access" action="menu_access_category"/>
</odoo>
